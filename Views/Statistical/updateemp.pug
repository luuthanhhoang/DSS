extends ../layout.statistical.pug

block content
	style.
		.wrapper {
		display: grid;
		grid-template-columns: 0.5fr 2.5fr;
		}

		.header{
		grid-column: 1/3;
		}

		.left-header{
		grid-row: 2/3;
		}

		.header nav p {
		color: #FFF;
		}

		.left-header  h5 {
		padding: 5px;
		background-color: rgb(200, 200, 200);
		color: blue;
		}

		.left-header ul li {
		list-style: none;
		padding: 3px;
		color: #000;
		}
	- var a = "Mã Id: " +  employee.Id 
		h3 Chỉnh sửa thông tin nhân viên 
		p.ml-3= a
	div.update-emp.d-flex
		
		form.mr-5.ml-3(action="/statistical/employees/update/" + employee.Id, method="POST")
			each val, key in employee
				.form-group
					label(style="font-weight: bold")= key
					if key === 'Id'
						input.form-control(type='text', value=val, name=key, style = "width:30rem" readonly)
					else
						input.form-control(type='text', value=val, name=key, style = "width:30rem")
					
			button.btn.btn-primary(type='submit') Cập nhật

