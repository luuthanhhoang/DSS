extends ../layout.statistical.pug

block content
	style.
		.wrapper {
		display: grid;
		grid-template-columns: 0.5fr 2.5fr;
		}

		.header{
		grid-column: 1/3;
		}

		.left-header{
		grid-row: 2/3;
		}

		.header nav p {
		color: #FFF;
		}

		.left-header  h5 {
		padding: 5px;
		background-color: rgb(200, 200, 200);
		color: blue;
		}

		.left-header ul li {
		list-style: none;
		padding: 3px;
		color: #000;
		}
	- var a = "Xóa thành công nhân viên có mã Id = " +  employee.Id 
	h3.ml-3.mr-5= a
	a.btn.btn-primary.ml-3(href="/statistical/employees") Quay lại