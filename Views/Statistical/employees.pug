extends ../layout.statistical.pug

block content
	style.
		.wrapper {
		display: grid;
		grid-template-columns: 0.5fr 2.5fr;
		}

		.header{
		grid-column: 1/3;
		}

		.left-header{
		grid-row: 2/3;
		}

		.header nav p {
		color: #FFF;
		}

		.left-header  h5 {
		padding: 5px;
		background-color: rgb(200, 200, 200);
		color: blue;
		}

		.left-header ul li {
		list-style: none;
		padding: 3px;
		color: #000;
		}
	h3.ml-3.mr-5 Dữ liệu nhân viên
	table.table.mt-3
		thead
			tr
				th(scope='col') Action
				th(scope='col') Id
				th(scope='col') Age
				th(scope='col') Department
				th(scope='col') Gender
				th(scope='col') JobRole
				th(scope='col') EducationField
				th(scope='col') MaritalStatus
		each emp in employees
			tbody
				tr
					td
						a.btn.btn-primary(href="/statistical/employees/" + emp.Id) Xem
						a.btn.btn-primary.ml-1(href="/statistical/employees/update/" + emp.Id) Sửa
						a.btn.btn-primary.ml-1(href="/statistical/employees/delete/" + emp.Id) Xóa
					td= emp.Id
					td= emp.Age
					td= emp.Department
					td= emp.Gender
					td= emp.JobRole
					td= emp.EducationField
					td= emp.MaritalStatus	

