extends ../layout.statistical.pug

block content
	style.
		.wrapper {
		display: grid;
		grid-template-columns: 0.5fr 2.5fr;
		}

		.header{
		grid-column: 1/3;
		}

		.left-header{
		grid-row: 2/3;
		}

		.header nav p {
		color: #FFF;
		}

		.left-header  h5 {
		padding: 5px;
		background-color: rgb(200, 200, 200);
		color: blue;
		}

		.left-header ul li {
		list-style: none;
		padding: 3px;
		color: #000;
		}

	.show-employees-predict
		h3 Chi tiết dự báo nhân viên nghỉ việc
		table.table.mt-3
			thead
				tr
					th(scope='col') Id
					th(scope='col') Age
					th(scope='col') Department
					th(scope='col') Gender
					th(scope='col') JobRole
					th(scope='col') AttritionRate
					th(scope='col') Attrition
			each emp in employeePre
				tbody
					tr
						td= emp.Id
						td= emp.Age
						td= emp.Department
						td= emp.Gender
						td= emp.JobRole
						td= emp.AttritionRate
						td= emp.Attrition	